<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/product_boder"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <!--<View-->
            <!--android:id="@+id/view_horizontal"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="#992C3039" />-->
        <LinearLayout
            android:id="@+id/lay_product_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_productImg"
                android:layout_width="70dp"
                android:layout_height="70dp" />

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4E71F3" />

            <TextView
                android:id="@+id/txt_offprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000" />

        </LinearLayout>
        <View
            android:layout_toRightOf="@id/lay_product_items"
            android:layout_toEndOf="@id/lay_product_items"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#992C3039" />
        <!--<View-->
            <!--android:layout_width="1dp"-->
            <!--android:layout_height="fill_parent"-->
            <!--android:background="#992C3039" />-->
    </RelativeLayout>

