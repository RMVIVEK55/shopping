<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    tools:context="trainingproject.tridentnets.com.project_dharma.RegisterActivity">

    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView2"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/app_logo" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/txt_input_lay_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:textColorHint="#F0FFFF">

        <EditText
            android:id="@+id/edt_regdomin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:drawableLeft="@drawable/reg_domain"
            android:drawablePadding="10dp"
            android:hint="@string/domain"
            android:paddingBottom="5dp"
            android:paddingTop="15dp"
            android:singleLine="true"
            android:textColor="#F0FFFF"
            android:textColorHint="#F0FFFF" />
    </android.support.design.widget.TextInputLayout>

    <View
        android:id="@+id/reg_user_uline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/txt_input_lay_username"
        android:layout_marginRight="20dp"
        android:background="#ffffff" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/txt_input_lay_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg_user_uline"
        android:paddingTop="20dp"
        android:textColorHint="#F0FFFF">

        <EditText
            android:id="@+id/edt_reguser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/reg_emil"
            android:drawablePadding="10dp"
            android:hint="Email"
            android:paddingBottom="5dp"
            android:paddingTop="15dp"
            android:singleLine="true"
            android:textColor="#F0FFFF"
            android:textColorHint="#F0FFFF" />

        <View
            android:id="@+id/reg_emil_uline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="20dp"
            android:background="#ffffff" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/txt_input_lay_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_input_lay_email"
        android:paddingTop="20dp"
        android:textColorHint="#F0FFFF">

        <EditText
            android:id="@+id/edt_regpwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/reg_emil"
            android:drawablePadding="10dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingBottom="5dp"
            android:paddingTop="15dp"
            android:singleLine="true"
            android:textColor="#F0FFFF"
            android:textColorHint="#F0FFFF" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="20dp"
            android:background="#ffffff" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_below="@+id/txt_input_lay_pwd"
        android:id="@+id/btn_reg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/register_button_bg"
        android:padding="10dp"
        android:text="@string/register"
        android:textAllCaps="false"
        android:textColor="#4B7AA2"
        android:textSize="20dp" />
    <ProgressBar
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/pbar_register"/>
</RelativeLayout>

