<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="trainingproject.tridentnets.com.shoppingtask.Fragment.FavouriteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/d10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="@dimen/d10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"

        >

        <TextView
            android:id="@+id/txt_fav_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/img_fav_product_img"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txt_fav_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="@string/sample_text" />

        <TextView
            android:id="@+id/txt_fav_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="@string/sample_text"
            android:textColor="#4CB050" />


        <ToggleButton

            android:layout_gravity="center"
            android:id="@+id/tbtn_fav_ic_fav"
            android:layout_width="20dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/select_favourite"
            android:textOff=""
            android:textOn="" />

    </LinearLayout>


</LinearLayout>
