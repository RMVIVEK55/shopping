<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="trainingproject.tridentnets.com.project_dharma.Listfragment">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/usa"
        android:orientation="vertical"

        >
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/txt_id"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="10dp"
            android:button="@drawable/ic_img_unfav" />
        <TextView
            android:id="@+id/txtview_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:background="#99000000"
            android:padding="12dp"
            android:text="2 Message"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/txtview_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="#99000000"
            android:padding="12dp"
            android:text="2 live chat "
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtview_name"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dr.pets Aver"/>
    <TextView
        android:id="@+id/txtview_desc"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="i can understand animals"/>
    <TextView
        android:id="@+id/txtview_address"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="us-USA"/>




</LinearLayout>
